{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "lib",

    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "declarationMap": true,

    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],

    "allowJs": true,
    "checkJs": false,
  }
}
