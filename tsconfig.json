{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "lib",

    "target": "es2022",
    "module": "es2022",
    "lib": ["es2023", "dom"],
    "declaration": true,
    "declarationMap": true,

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  }
}
